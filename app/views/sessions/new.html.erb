<div class="sidenav">
  <div class="login-main-text">
    <h2>Application Login Page</h2>
    <p>Login or register from here to access.</p>
  </div>
</div>
<div class="main">
   <div class="col-md-6 col-sm-12">
      <div class="register-form">
	      <% flash.each do |name, msg| %>
	        <%= content_tag :div, msg, id: "flash_#{name}" %>
	      <% end %>
        <%= form_tag sessions_path do %>
          <div class="form-group">
            <%= label_tag :email %><br />
            <%= text_field_tag :email, params[:email], class:"form-control", placeholder: "Email" %>
          </div>
          <div class="form-group">
             <%= label_tag :password %><br />
             <%= password_field_tag :password %>
          </div>
          <div class="form-group">
            <p><%= link_to "Forgot password?", new_password_reset_path %></p>
          </div>
          <%= submit_tag "Log In", class: "btn btn-black" %>
          <%= link_to "Register", signup_path, class: "btn btn-secondary" %>

        <% end%>
      </div>
   </div>
</div>